<?xml version="1.0"?>

<config>
    <sections>
        <shipping translate="label" module="shipping">
            <groups>
                <brand translate="label">
                    <label>Brand</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>3</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <checkout_brand_option translate="label">
                            <label>Brand Option</label>
                            <frontend_type>select</frontend_type>
                            <source_model>summa_brand/attribute_source_brand</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </checkout_brand_option>
                        <checkout_brand_price translate="label">
                            <label>Brand Price</label>
                            <frontend_type>text</frontend_type>
                            <validate>validate-number</validate>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </checkout_brand_price>
                    </fields>
                </brand>
            </groups>
        </shipping>
    </sections>
</config>